<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="trackerSettings" type="Shadow.Configuration.TrackerSettingsSection,ShadowTracker.Core" allowLocation="true" allowDefinition="Everywhere"/>
	</configSections>

	<trackerSettings
		sqlMapping="ShadowDB.map"
		fileFilter=".jpg|.jpeg|.jpe|.avi|.mov">

		<add name="ShadowTest1" path="C:\ShadowTest1" />
		<add name="ShadowTest2" path="C:\ShadowTest2" />
	</trackerSettings>

	<connectionStrings>
		<add name="ShadowDB"
			 connectionString="Data Source=.\SQLEXPRESS;AttachDbFilename=|DataDirectory|\ShadowDB.mdf;Integrated Security=True;User Instance=True"
			 providerName="System.Data.SqlClient" />
	</connectionStrings>
</configuration>